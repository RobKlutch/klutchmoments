# GPU Microservice Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
CORS_ORIGINS=["*"]

# GPU/Device Configuration
DEVICE=cuda  # cuda, cpu, mps

# YOLOv8 Configuration
YOLO_MODEL=yolov8n.pt  # yolov8n.pt, yolov8s.pt, yolov8m.pt
INPUT_SIZE=640
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.5

# ByteTrack Configuration
TRACK_THRESH=0.6
TRACK_BUFFER=30
MATCH_THRESH=0.8

# Video Processing Configuration
DEFAULT_FPS=30
MAX_VIDEO_DURATION=300  # seconds

# Output Configuration
OUTPUT_DIR=./output
TEMP_DIR=./temp

# FFmpeg Configuration
FFMPEG_PRESET=fast  # ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow
FFMPEG_CRF=23  # 0-51, lower = better quality
OUTPUT_RESOLUTION=1920x1080

# Performance Configuration
MAX_CONCURRENT_JOBS=2
PROCESSING_TIMEOUT=3600  # seconds

# Effect Configuration
SPOTLIGHT_RADIUS=150
SPOTLIGHT_FEATHER=50
SPOTLIGHT_INTENSITY=0.7